<% include ./include/headcssuser.html %>

<body ng-app="marksimoslogin">

<div class="container-fluid width_big_screen" ng-controller="userHelpController" >

    <user-header showmenu="false" showlogout="true" current-round="0"></user-header>


    <div class="row login" ng-cloak>
        <div class="col-md-10 col-md-offset-1 panelbox">


            <div class="row intro_box">
                <div class="col-md-12">
                    <ul class="nav nav-pills">
                        <li ng-class="{'active':isFAQShown}">
                            <a href="" ng-click='clickIntro("FAQ")'>FAQ</a>
                        </li>
                        <li ng-class="{'active':isVideoShown}">
                            <a href="" ng-click='clickIntro("Video")'>Video</a>
                        </li>
                        <li ng-class="{'active':isManualShown}">
                            <a href="" ng-click='clickIntro("Manual")'>Manual</a>
                        </li>
                    </ul>
                    <div class="divider_horizontal"></div>
                </div>


            </div>


            <div class="row intro_data" ng-show='isManualShown'>
                <div class="col-md-12">
                    <div class="bs-docs-section" ng-bind-html='trustAsHtml(manual)'></div>
                </div>
            </div>

            <div class="row intro_data" ng-show='isFAQShown'>
                <div class="col-md-3">
                    <div class="bs-docs-sidebar">

                        <ul class="nav bs-docs-sidenav">

                            <li class="" ng-class="{'active':questionsShown[$index]}" ng-repeat='faq in faqs'>
                                <a href="" ng-click='chickFAQ($index)'>{{faq.category}}</a>
                            </li>

                        </ul>

                    </div>
                </div>

                <div class="col-md-9">
                    <div class="bs-docs-section">
                        <div ng-repeat='faq in faqs' ng-show='questionsShown[$index]'>
                            <h3 class="bs_h3">{{faq.category}}</h3>
                            <div ng-repeat='q in faq.questions'>
                                <h4 class="bs_h4">{{q.title}}</h4>
                                <div class="info_highlight">
                                    <p class="bs_p">{{q.answer}}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row video_list" ng-show='isVideoShown'>
                <div class="col-md-3 col-md-offset-1-5">

                    <iframe width=100% src="http://player.youku.com/embed/XNzE0OTYyMTcy" frameborder=0 allowfullscreen></iframe>

                </div>

                <div class="col-md-3">

                    <iframe width=100% src="http://player.youku.com/embed/XNTY0ODgxMzAw" frameborder=0 allowfullscreen></iframe>

                </div>

                <div class="col-md-3">

                    <iframe width=100% src="http://player.youku.com/embed/XNzMxODUwODMy" frameborder=0 allowfullscreen></iframe>

                </div>
            </div>


        </div>

    </div>


</div>

