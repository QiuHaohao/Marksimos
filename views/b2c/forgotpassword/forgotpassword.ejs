<% include ../include/headcss.ejs %>


<body ng-app="b2clogin">

    <b2c-header showlogin="true"></b2c-header>


    <div class="b2c-top-line">
        <div class="b2c-container">
          <label><i class="glyphicon glyphicon-lock"></i>{{'ForgotPasswordTitle' | translate}}</label>
          <span>{{'FindPassword' | translate}}</span>
          <a href="/e4e/forgotpassword" class="active">{{'EnterEmail' | translate}}</a>
            &gt;
          <a href="" >{{'ResetPassword' | translate}}</a>
            &gt;
          <a href="">{{'Done' | translate}}</a>
        </div>
    </div>


    <div class="middle b2c-container forgetpasswordbox" ng-controller="userLoginController as forgetPassword">
        <div class="b2c-enter-email">

            <div class="row" >
                <div class="col-md-5">
                    <div class="b2c-prints"></div>
                </div>

                <div class="col-md-5" ng-if="forgetPassword.css.showForgotPasswordForm" ng-cloak>
                    <form name="forgetPasswordForm" novalidate >
                        <h3><strong>{{'EnterEmail' | translate}}：</strong></h3>

                        <div class="form-group">
                            <span class="err-msg" ng-if="forgetPasswordForm.email.$dirty&&forgetPassword.css.emailNotExistedInfo">{{'ErrorTip' | translate}}</span>
                        </div>

                        <div class="form-group has-feedback" ng-class="{'has-success':forgetPasswordForm.email.$dirty&&forgetPasswordForm.email.$valid, 'has-error':forgetPasswordForm.email.$dirty&&forgetPasswordForm.email.$invalid}">
                            <input class="input-lg form-control" type="email" name="email" placeholder="" ng-model="forgetPassword.newUser.email" required/>
                            <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true" ng-if="forgetPasswordForm.email.$dirty&&forgetPasswordForm.email.$valid"></span>
                            <span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true" ng-if="forgetPasswordForm.email.$dirty&&forgetPasswordForm.email.$invalid"></span>
                        </div>
                        <p><button class="btn btn-default" ng-click="forgetPassword.clickForgetPasswordStep1(forgetPasswordForm)">{{'FindPassword' | translate}}</button></p>
                    </form>

                </div>


                <div class="col-md-5" ng-if="!forgetPassword.css.showForgotPasswordForm" ng-cloak>
                    <h3><strong> {{'Greet:' | translate}}</strong></h3>
                    <div class="text-left">
                        <p>{{'OpenEmailText1' | translate}}<a href="{{forgetPassword.newUser.email | emailaddress}}" target="_blank">{{forgetPassword.newUser.email}}</a></p>
                        <p>{{'OpenEmailText2' | translate}}. <a class="btn btn-info" href="{{forgetPassword.newUser.email | emailaddress}}" target="_blank">{{'OpenEmailText3' | translate}}</a></p>
                    </div>

                    <hr/>

                    <h3><strong> {{'NoEmailText1' | translate}}</strong></h3>
                    <div class="text-left">
                        &gt;<span>{{'NoEmailText2' | translate}}</span>
                        <br/>
                        &gt;<a class="text-danger" href="/e4e/forgotpassword" target="_self">{{'NoEmailText3' | translate}}</a>
                    </div>
                </div>

            </div>


        </div>
    </div>


<% include ../include/footer.ejs %>
<% include ../include/footerscriptlogin.ejs %>
